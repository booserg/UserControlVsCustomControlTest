<UserControl x:Class="UserControlsLib.MyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserControlsLib"
             x:Name="MyControlName">
    <TextBox x:Name="tbMain" Text="{Binding Path=InternalText, ElementName=MyControlName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
</UserControl>
